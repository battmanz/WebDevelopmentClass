<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content">
            <nav>
                <ul>
                    <li>@Html.ActionLink("Lesson 1", "Index", "Lesson", new { id = 1 }, null)</li>
                    <li>@Html.ActionLink("Lesson 2", "Index", "Lesson", new { id = 2 }, null)</li>
                    @*<li><a href="#">Lesson 3</a></li>
                    <li><a href="#">Lesson 4</a></li>
                    <li><a href="#">Lesson 5</a></li>
                    <li><a href="#">Lesson 6</a></li>
                    <li><a href="#">Lesson 7</a></li>
                    <li><a href="#">Lesson 8</a></li>*@
                </ul>
            </nav>
        </div>
    </header>
    <section id="main">
        <div class="content">
            @RenderBody()
        </div>
    </section>
    <footer>
        <div class="content">
            <p>&copy; 2013 - @DateTime.Now.Year Matt Banz, Inc</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
