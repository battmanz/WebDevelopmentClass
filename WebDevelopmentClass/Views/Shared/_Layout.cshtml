<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-47462679-1', 'apphb.com');
        ga('send', 'pageview');
    </script>
</head>
<body>
    <header>
        <div class="content">
            <hgroup>
                <h1>@Html.ActionLink("Web Development", "Index", "Home")</h1>
                <h2>Yeah, it's awesome!</h2>
            </hgroup>
        </div>
    </header>
    <section id="main">
        <p>
            The final class will be this upcoming Wednesday, March 19 from 7:00 to 9:00pm due to the political caucus on Thursday.
        </p>
        <div class="content">
            @RenderBody()
        </div>
    </section>
    <footer>
        <div class="content">
            <p>&copy; 2013 - @DateTime.Now.Year Matt Banz, Inc</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/syntaxHighlighter")
    @RenderSection("scripts", required: false)
</body>
</html>
